@model IEnumerable<ThuongMaiDienTu.Models.SanPham>

<h2>Danh sách sản phẩm</h2>
<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Thêm sản phẩm</a>
<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenSanPham</td>
                <td>@item.GiaGoc</td>
                <td>@item.SoLuongTon</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = item.Id })" class="btn btn-warning">Sửa</a>
                    <a href="@Url.Action("Delete", "Product", new { id = item.Id })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
